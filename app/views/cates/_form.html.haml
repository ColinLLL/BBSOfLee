= form_for @cate do |f|
  - if @cate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cate.errors.count, "error")} prohibited this cate from being saved:"
      %ul
        - @cate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :cate_name
    = f.text_field :cate_name
  .field
    = f.label :post_id
    = f.number_field :post_id
  .actions
    = f.submit 'Save'
