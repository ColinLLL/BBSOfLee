= form_for @signin do |f|
  - if @signin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@signin.errors.count, "error")} prohibited this signin from being saved:"
      %ul
        - @signin.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .actions
    = f.submit 'Save'
