.BBS_form
= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being registered:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    %legend Enter User Details
    .form-group
      = f.label :username
      .form-control
        = f.text_field :username, size: 40
    .form-group
      = f.label :email
      .form-control
        = f.text_field :email, size: 40
    .form-group
      = f.label :password, 'Password'
      .form-control
        = f.password_field :password, size: 40
    .checkbox
      %input{:type => "checkbox"} Check me out
    .form-group 
      = f.submit "Register"
  
= link_to 'Back', users_path

