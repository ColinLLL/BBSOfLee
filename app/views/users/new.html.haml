.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
      %ul.nav.navbar-nav.navbar-right
        %li.active
          =link_to 'Login', login_path

.container
  .form-signin{:role => "form"} 
    = form_for @user do |f|
      - if @user.errors.any?
        #error_explanation
          
          - @user.errors.full_messages.each do |msg|
            .alert.alert-danger.alert-dismissable
              %button.close{:type => "button", "data-dismiss" => "alert", "aria-hidden" => "true"} &times
              %strong Warning!
              %p= msg
              
      %fieldset{:style => "margin-top: 100px;"}
        %legend{:style => "margin: 20px;"} Enter User Information
        %input.form-control{:id => "user_username", :name => "user[username]", :type => "text", :placeholder => "Username", :style => "margin: 20px;"}
        %input.form-control{:id => "user_email", :name => "user[email]", :type => "email", :placeholder => "Email", :style => "margin: 20px;"}
        %input.form-control{:id => "user_password", :name => "user[password]", :type => "password", :placeholder => "Password", :style => "margin: 20px;"}
        %input.form-control{:id => "user_password_confirmation", :name => "user[password_confirmation]", :type => "password", :placeholder => "Password Confirmation", :style => "margin: 20px;"}
        .checkbox{:style => "margin: 20px;"}
          %input{:type => "checkbox"} Check me out
        %button.btn.btn-lg.btn-primary.btn-block{:style => "margin: 20px;", :type => "submit"} Register 