= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being registered:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :email
    %br
      = f.text_field :email
  %p
    = f.label :password
    %br
      = f.text_area :password
  %p
    = f.submit "Register"
= link_to 'Back', users_path
