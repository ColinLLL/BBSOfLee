.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{:type => "button", :date => { :target => ".navbar-collapse", :toggle => "collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
      %ul.nav.navbar-nav.navbar-right
        %li.active
          =link_to 'Login', login_path

.container
  .form-signin{:role => "form"} 
    = form_for @user do |f|
      - if @user.errors.any?
        #error_explanation
          
          - @user.errors.full_messages.each do |msg|
            .alert.alert-danger.alert-dismissable
              %button.close{:type => "button", "data-dismiss" => "alert", "aria-hidden" => "true"} &times
              %strong Warning!
              %p= msg
              
      %fieldset
        %legend Enter User Information
        = f.text_field :username, {:class => "form-control", :placeholder => "Username"}
        = f.email_field :email, {:class => "form-control", :placeholder => "Email"}
        = f.password_field :password, {:class => "form-control", :placeholder => "Password"}
        = f.password_field :password_confirmation, {:class => "form-control", :placeholder => "Password Confirmation"}
        = f.check_box :username
        = f.label "Check me out"

        %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Register 