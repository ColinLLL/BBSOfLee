.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{:type => "button", :date => { :target => ".navbar-collapse", :toggle => "collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
        %li
          %a{:href => "/posts", :role => "button"} Posts
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            %a #{@current_user.username}
          %li.active
            %a{:href => "/myposts", :role => "button"} MyPosts
          %li
            =link_to 'Logout', logout_path
        - else
          %li.active
            =link_to 'Login', login_path
          %li
            =link_to 'Register', register_path
#index.container
  %ul.breadcrumb.menu.clearfix
    %li
      %a{:href => "/"} Home
      %span.divider
    %li.active
      %a{:href => "/posts"} posts

  .container-fluid
    
    #main.content{:style => "width: 700px; margin-top: auto; margin-right: 260px; position: absolute;"}
      .jumbotron
        %h3.entry-title Listing posts

        %table.table.table-striped

          - @posts.each do |post|
            %tr
              %td
                %dl
                  %dt.lead 
                    = link_to post.title, post
              
                  %dd
                    = truncate(strip_tags(post.content), length: 80)
                  - post.categories.each do |category|
                    %dt.label.label-primary #{category.category_title}
    #side.content{:style => "width: 220px; margin-top: auto; margin-right: 0; margin-left: 750px; position: absolute; text-align:center;"}
      .jumbotron
        .box
        %h4.entry-title Testing
        .content
          %a.btn.btn-success{:href => 'new', :role => 'button'} New Paper