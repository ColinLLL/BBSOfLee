.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{:type => "button", :date => { :target => ".navbar-collapse", :toggle => "collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
        %li
          %a{:href => "/posts", :role => "button"} Posts
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            %a #{@current_user.username}
          %li.active
            %a{:href => "/myposts", :role => "button"} MyPosts
          %li
            =link_to 'Logout', logout_path
        - else
          %li.active
            =link_to 'Login', login_path
          %li
            =link_to 'Register', register_path
#index.container
  %ul.breadcrumb.menu.clearfix
    %li
      %a{:href => "/"} Home
      %span.divider
    %li
      %a{:href => "/posts"} posts
      %span.divider
    %li.active
      %a current post
  .container-fluid
    #main.content{:style => "width: 700px; margin-top: auto; margin-right: 260px; position: absolute;"}
      .jumbotron
        %h3 #{@post.title}
        .info.leader
          - @post.categories.each do |category|
            %a.node{:href => "#"} #{category.category_title}
            by 
          %a #{@post.user.username}
          %abbr.timeago published at #{@post.updated_at.to_formatted_s(:long_ordinal)}
        %dd #{@post.content}
        %dd#good_bad
          %button.btn.btn-default.btn-lg{:type => "button"}
            %span.glyphicon.glyphicon-thumbs-up
          %button.btn.btn-default.btn-lg{:type => "button"}
            %span.glyphicon.glyphicon-thumbs-down
      .jumbotron
        %h3.entry-title Comments
        .list-group
        - @post.comments.each do |comment|
          %p.list-group-item-text{:style => "font-size: 14px;"}  #{comment.user.username} at #{comment.updated_at.to_formatted_s(:long_ordinal) } said: #{comment.body}
      .jumbotron
        %h3.entry-title Type your comment:
        = form_for([@post, @post.comments.build]) do |f|
          %p
            %label{:for => "comment_body"} 
            %br/
            = f.text_area :body, {:class => "form-control", :rows => "5"}
          %p
            %button.btn.btn-sm.btn-primary{:type => "submit"} Commit
          = link_to 'Back', posts_path
    #side.content{:style => "width: 220px; margin-top: auto; margin-right: 0; margin-left: 750px; position: absolute; text-align:center;"}
      .jumbotron
        .box
        %h4.entry-title Testing
        .content
          %a.btn.btn-success{:href => 'new', :role => 'button'} New Paper