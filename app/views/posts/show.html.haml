.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
        %li
          %a{:href => "../posts", :role => "button"} Posts
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            %a #{@current_user.username}
          %li.active
            %a{:href => "../myposts", :role => "button"} MyPosts
          %li
            =link_to 'Logout', logout_path
        - else
          %li.active
            =link_to 'Login', login_path
          %li
            =link_to 'Register', register_path
.container{:style => "width:1000px;margin-top: auto; margin-left: auto; raduis:0px;"}
  %ul.breadcrumb.menu.clearfix
    %li
      %a{:href => "/"} Home
      %span.divider
    %li
      %a{:href => "/posts"} posts
      %span.divider
    %li.active
      %a current post
  .container-fluid
    
    #main.content{:style => "width:700px;margin-top: auto; margin-right: 260px; raduis:0px;position: absolute;"}
      .jumbotron{:style => "padding-left: 10px;padding-right: 10px;padding-top: 5px;padding-bottom: 20px;"}
        %h3.entry-title{:style => "margin: 20px;"} #{@post.title}
        .info.leader{:style => "border-bottom: 1px solid #ddd; background-color: white;"}
          - @post.categories.each do |category|
            %a.node{:href => "#", :style => "padding:1px 5px;color:#778087;background-color:#f5f5f5;"} #{category.category_title}
            by 
          %a{"data-author" => "true", :href => "#", :style => "text-decoration: underline;"} #{@post.user.username}
          %abbr.timeago published at #{@post.updated_at.to_formatted_s(:db)}
        %dd{:style => "background-color: white;"}
          - strip_tags(@post.content).split("\n").each do |ipa|
            %p.list-group-item-text #{ipa}
      .jumbotron{:style => "padding-left: 10px;padding-right: 10px;padding-top: 5px;padding-bottom: 20px;"}
        %h3.entry-title{:style => "margin: 20px;margin-top: 0;border-bottom: 1px solid #ddd;"} Comments
        .list-group
        - @post.comments.each do |comment|
          %p.list-group-item-text{:style => "line-height: 20px; padding: 5px;background-color:#f1f1f1;margin: 20px;background-color: white;"}  #{comment.user.username} at #{comment.updated_at.to_formatted_s(:db) } said: #{comment.body}
      .jumbotron{:style => "padding-left: 10px;padding-right: 10px;padding-top: 5px;padding-bottom: 20px;"}
        %h3.entry-title{:style => "margin: 20px;margin-top: 0;border-bottom: 1px solid #ddd;"}  Type your comment:
        = form_for([@post, @post.comments.build]) do |f|
          %p{:style => "margin: 20px;"}
            %label{:for => "comment_body"} 
            %br/
            %textarea.form-control{:id => "comment_body", :name => "comment[body]", :rows => "5", :style => "width:80%;"}

          %p{:style => "margin: 20px;"}
            %button.btn.btn-sm.btn-primary{:type => "submit", :style => "margin-top: 20px"} Commit
          = link_to 'Back', posts_path
  #side.content{:style => "width:220px; margin-top: 0; margin-right: 0; margin-left: 750px; raduis:0px;position: absolute;text-align:center;"}
    .jumbotron{:style => "padding-left: 10px;padding-right: 10px;padding-top: 5px;padding-bottom: 20px;"}
      .box
      %h4.entry-title{:style => "margin: 20px;border-bottom: 1px solid #ddd; background-color: white;"} Testing
      .content
        %a.btn.btn-success{:href => 'new', :role => 'button', :style => "margin: auto;"} New Paper
