.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
        %li
          %a{:href => "../posts", :role => "button"} Posts
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            %a #{@current_user.username}
          %li.active
            %a{:href => "../posts", :role => "button"} MyPosts
          %li
            =link_to 'Logout', logout_path
        - else
          %li.active
            =link_to 'Login', login_path
          %li
            =link_to 'Register', register_path
.container

  %table{:style => "margin: 20px;"}
    %tr
      %td
        %dl
          %dt.lead #{@post.title}
          %dd
            - strip_tags(@post.content).split("\n").each do |ipa|
              %p.list-group-item-text #{ipa}
        - @post.categories.each do |category|
          %dt.label.label-primary #{category.category_title}

  %legend{:style => "margin: 20px;"} View Comments
  .list-group
  - @post.comments.each do |comment|
    %p.list-group-item-text{:style => "line-height: 20px; padding: 5px;background-color:#f1f1f1;margin: 20px;"}  #{comment.user.username}  says: #{comment.body}

  %legend{:style => "margin: 20px;"} Leave a comment
  %p.subtit{:style => "margin: 20px;"}
    Type your comment:
  = form_for([@post, @post.comments.build]) do |f|
    %p{:style => "margin: 20px;"}
      %label{:for => "comment_body"} 
      %br/
      %textarea.form-control{:id => "comment_body", :name => "comment[body]", :rows => "5", :style => "width:50%;"}

    %p{:style => "margin: 20px;"}
      %button.btn.btn-sm.btn-primary{:type => "submit", :style => "margin-top: 20px"} Commit

  = link_to 'Back', posts_path