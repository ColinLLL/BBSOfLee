.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
        %li
          %a{:href => "posts", :role => "button"} Posts
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            %a Hello, world! #{@current_user.username}
          %li.active
            %a{:href => "posts", :role => "button"} MyPosts
          %li
            =link_to 'Logout', logout_path
        - else
          %li.active
            =link_to 'Login', login_path
          %li
            =link_to 'Register', register_path

.container
  %h1 Listing posts
  #side

    %a.btn.btn-default{:href => 'new', :role => 'button'} New Paper
  #main
    %table.table.table-striped

      - @posts.each do |post|
        %tr
          %td
            %dl
              %dt.lead #{post.title}
              - post.categories.each do |category|
                %dt.list_category #{category.category_title}
              %dd
                = truncate(strip_tags(post.content), length: 80)
            
            %td.list_actions
              = link_to 'Read', post

    %br