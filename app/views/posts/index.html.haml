.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            %a Hello, world! #{@current_user.username}
          %li.active
            =link_to 'Logout', logout_path
        - else
          %li.active
            =link_to 'Login', login_path
          %li
            =link_to 'Register', register_path

.container 
  %h1 Listing posts
  #side
    - if @current_user
      .panel
        .panel-heading 
          %h3.panel-title #{@current_user.username}
        .panel-body Detail
        %a.btn.btn-default{:href => 'newpost', :role => 'button'} New Paper
  #main
    %table

      - @posts.each do |post|
        %tr{:class => cycle('list_line_odd', 'list_line_even')}
          %td.list_description
            %dl
              %dt.lead #{post.title} [#{post.seltype}]
              %dd.pull-right
                = truncate(strip_tags(post.content), length: 80)
              - post.category.split(',').each do |icate|
                %span #{icate}
          %td.list_actions
            = link_to 'Read', post
            %br/
            = link_to 'Edit', edit_post_path(post)
            %br/
            = link_to 'Delete', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br
  