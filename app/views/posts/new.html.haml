.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} OC Project
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
        %li
          %a{:href => "posts", :role => "button"} Posts
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            %a Hello, world! #{@current_user.username}
          %li.active
            %a{:href => "posts", :role => "button"} MyPosts
          %li
            =link_to 'Logout', logout_path
        - else
          %li.active
            =link_to 'Login', login_path
          %li
            =link_to 'Register', register_path
.container
  .form{:role => "form"}
    = form_for @post do |f|
      %fieldset
        %h3 Edit your post

        .form-group
          %label.lead{:for => "Title"} Title
          %input.form-control{:id => "post_title", :name => "post[title]", :type => "text"}
        .form-group
          %label.lead{:for => "Content"} Content
        
          %textarea.form-control{:id => "post_content", :name => "post[content]", :rows => "30"}

      %h3 Add category
      %p.subtit
        Posts tagged (Add Tag, your content can be more people see)
      %input.form-control{:name => "category[category_title]", :maxlength => "100", :style => "width:60%; height:30px;", :type => "text"}
    
      %p
        %button.btn.btn-sm.btn-primary{:type => "submit", :style => "margin-top: 20px"} Commit