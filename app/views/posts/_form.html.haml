.form{:role => "form"}
  = form_for @post do |f|

    - if @post.errors.any?
      #error_explanation
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg

    %fieldset
      %legend Edit Your Post
      %div
        = f.label :title
      %div
        %input{:id => "post_title", :name => "post[title]", :type => "text"}
        = f.select :seltype, [ 'Original', 'Reprinted', 'Translation' ], :prompt => 'Select'
        %span{:style => "display:inline-block; padding:4px 0 0 10px;"} *Only original and translated articles can be recommended to the Home
      %div
        = f.label :content
      .section
        %textarea.xheditor{:id => "post_content", :name => "post[content]", :rows => "30", :style => "width:99.4%;"}
        
        
    %h3 Add category
    #moreDiv
      %p.subtit
        Posts tagged (Add Tag, your content can be more people see)
      %div{:style => "position:relative;"}
        #d_tag2
        = succeed "(Add" do
          %input{:id => "post_cata", :name => "post[cata]", :maxlength => "100", :style => "width:60%; height:20px;", :type => "text"}/
        up to five labels, with "," separated between multiple tags)
        #tag2box{:style => "display:none;"}
          %table
            %tr
              %th Common tags
              %td#td_tag21
            %tr
              %th Featured Tags
              %td#td_tag22

    %button.btn.btn-sm.btn-primary{:type => "submit"} Commit