.form-signin
  = form_tag do
    %fieldset{:style => "margin-top: 100px;"}
      %legend.form-signin-heading{:style => "margin: 20px;"} Please Log in
      %input.form-control{:style => "margin: 20px;", :id => "email", :name => "email", :type => "email", :placeholder => "Email address"}
          
      %input.form-control{:style => "margin: 20px;", :id => "password", :name => "password", :type => "password", :placeholder => "Password"} 
      .checkbox{:style => "margin: 20px;"}
        %input{:type => "checkbox"} Remember me
      %button.btn.btn-lg.btn-primary.btn-block{:style => "margin: 20px;", :type => "submit"} Login
