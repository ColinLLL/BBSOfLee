.BBS_form
  = form_tag do
    %fieldset
      %legend Enter User Information
      .form-group.has-success.has-feeback
        /.col-xs-12.col-sm-9
        /.form-group
        /= label_tag :email, 'Email'
        /.col-xs-12.col-sm-9
        .form-control
          %input{:id => "email", :name => "email", :type => "text"} Email
          /= text_field_tag :email
          %span.glyphicon.glyphicon-ok.form-control-feedback
      .form-group
        /.col-xs-12.col-sm-9
        /.form-group
        
        /= label_tag :password, 'Password'
        /.col-xs-12.col-sm-9
        .form-control.active
          %input{:id => "password", :name => "password", :type => "password"} Password
          /= password_field_tag :password
          %span.glyphicon.glyphicon-ok.form-control-feedback
      .checkbox
      %input{:type => "checkbox"} Remember me
      .form-group 
        %button.btn.btn-primary{:type => "submit"} Login
